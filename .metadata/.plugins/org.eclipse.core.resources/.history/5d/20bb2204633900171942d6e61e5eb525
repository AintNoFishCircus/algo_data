package list;

public class einfacheListe {

	private Node head;
	
	
	public einfacheListe(){
		head = new Node();
	}
	
	public boolean isEmpty(){
		if (head.getNext().equals(null)){
			return true;
		}else{
			return false;
		}
	}
	
	public int addFirst(int value){
		Node n = new Node(value, null);
		n.setNext(head.getNext());
		head.setNext(n);
		return n.getValue();
	}
	
	public int addLast(int value){
		Node temp = head;
		while(temp.getNext()!= null){
			temp = temp.getNext();
		}
		Node n = new Node(value,temp.getNext());
		temp.setNext(n);
		return n.getValue();
	}
	
	public int getFirst(){
		return head.getNext().getValue();
	}
	public int getLast(){
		Node temp = head;
		while(temp.getNext()!= null){
			temp = temp.getNext();	
		}
		
		return temp.getValue();
	}
	
	public int removeLast(){
		Node temp = head;
		while(temp.getNext().getNext()!= null){
			temp = temp.getNext();
		}
		Node n = new Node(temp.getNext().getValue(), temp.getNext().getNext());
		temp.setNext(null);
		return n.getValue();
		
	
	}
}
